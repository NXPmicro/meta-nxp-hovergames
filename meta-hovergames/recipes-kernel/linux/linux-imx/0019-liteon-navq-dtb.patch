+		port {
+			liteon_csi_ep: endpoint {
+				remote-endpoint = <&mipi1_sensor_ep>;
+			};
+		};
+	};
+};
+
+/delete-node/ &ov5645_mipi;
+
+&csi1_bridge {
+	fsl,two-8bit-sensor-mode;
+};
+
+&mipi1_sensor_ep {
+	remote-endpoint = <&liteon_csi_ep>;
+};
+
+&adv_bridge {
+	adi,addr-cec = <0x3c>;
+};
+
+&i2c4 {
